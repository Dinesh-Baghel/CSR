@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Http
<MudNavMenu Class="pt-2" Style="color:white;">
    <!-- User Start -->
    <MudNavGroup Icon="@Icons.Material.Filled.Person" IconColor="Color.Inherit" Title="@UserName">
        <MudNavLink Icon="@Icons.Material.Filled.ExitToApp" IconColor="Color.Inherit" Style="color:white;" Href="/Account/User-Logout">Logout</MudNavLink>
    </MudNavGroup>
    <!-- User End -->
    @foreach (var topMenu in menuList.Where(m => m.Parent_Id == 0))
    {
        var children = menuList.Where(m => m.Parent_Id == topMenu.Id).ToList();
        @if (children.Any())
        {
            <MudNavGroup Title="@topMenu.Label" Expanded="true">
                <BSRRecursiveNavMenu MenuItems="children" AllMenus="menuList" />
            </MudNavGroup>
        }
        else
        {
            <MudNavLink Href="@topMenu.Url" Class="f15" Match="NavLinkMatch.All">@topMenu.Label</MudNavLink>
        }
    }
    @* <MudNavLink Icon="@Icons.Material.Filled.BarChart" Href="/Bsr">BSR</MudNavLink> *@

    @* <MudNavLink Href="#" Icon="@Icons.Material.Filled.BarChart">Best Seller Report</MudNavLink> *@
</MudNavMenu>

@code {

    private List<MenusList> menuList { get; set; } = new();
    private SelectListReq selectListReq { get; set; } = new();
    private string? UserName { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var context = HttpContextAccessor.HttpContext;
        if (context != null)
        {
            UserName = context.User.Identity!.Name;
        }
        selectListReq.Cmd = CmdNames.Get_Menu_List;
        menuList = await ApiMasterService.CallingAPI<List<MenusList>, SelectListReq>(AllApiNames.GET_MENUS_LIST!, selectListReq);
    }
}
